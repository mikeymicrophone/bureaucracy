<h1>Listing lists</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%=h list.name %> (<%= list.user.login %>)</td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New list', new_list_path %>