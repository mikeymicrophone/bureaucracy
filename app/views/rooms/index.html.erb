<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Height</th>
    <th>Width</th>
    <th>Length</th>
    <th>Floor</th>
    <th>Doors</th>
    <th>Windows</th>
    <th>Description</th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%=h room.name %></td>
    <td><%=h room.user.andand.login %></td>
    <td><%=h room.height %></td>
    <td><%=h room.width %></td>
    <td><%=h room.length %></td>
    <td><%=h room.floor %></td>
    <td><%=h room.doors %></td>
    <td><%=h room.windows %></td>
    <td><%=h room.description %></td>
    <td><%= link_to 'Show', room %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New room', new_room_path %>